<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Students
                <a href="/students/add" class="btn btn-success pull-right">Add
                    New Student</a>
            </h2>
            <hr />

            <p>
                {{! TODO: render a list of all student first and last names here }}
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Student ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Expected Credential</th>
                                <th>Status</th>
                                <th>Program</th>
                                <th>Registration Date</th>
                            </tr>
                        </thead>
                        {{#each students}}
                            <tr>
                                <td><a
                                        href="/student/{{this.studentID}}"
                                    >{{this.studentID}}</a></td>
                                <td>{{this.firstName}} {{this.lastName}}</td>
                                <td><a
                                        href="mailto:{{this.email}}"
                                    >{{this.email}}</a></td>
                                <td>{{this.addressStreet}}<br
                                    />{{this.addressCity}}<br
                                    />{{this.addressState}}
                                    {{this.addressPostal}}</td>
                                <td><a
                                        href="/students?credential={{this.expectedCredential}}"
                                    >{{this.expectedCredential}}</a></td>
                                <td><a
                                        href="/students?status={{this.status}}"
                                    >{{this.status}}</a></td>
                                <td><a
                                        href="/students?program={{this.program}}"
                                    >{{this.program}}</a></td>
                                <td>{{this.registrationDate}}</td>
                                <td>
                                    <div class="btn btn-danger"><a
                                            href="/students/delete/{{this.studentID}}"
                                        >remove</a></div>
                                </td>
                            </tr>
                        {{/each}}
                        {{#unless students}}
                            <div class="col-md-12 text-center">
                                <strong>{{message}}</strong>
                            </div>
                        {{/unless}}
                    </table>
                </div>
            </p>

        </div>
    </div>
</div>